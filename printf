#include "main.h"
/**
 * _printf - prints formatted output.
 * @format: character string.
 * Return: character output count.
 */
int _printf(const char *format, ...)
{
	size_t i = 0, k = 0, count = 0, t, m, lenf;
	va_list arg1;
	const char *copy[BUFF-SIZE];
	const char *str;

	va_start(arg1, format);
	if (format == NULL)
		exit(EXIT_FAILURE);
	while (format[i])
	{ 
		if (format[i] == '%')
		{
			i++;
			if (format[i] == 's')
			{
				f = va_arg(arg1, char *);
				lenf = 0, lenc = 0;
				while (f[lenf++])
					count++;
				m = 0;
				for (t = count; t < count + lenf; t++)
					copy[t] = str[m++];
			}
			else if (format [i] == 'c')
			{
				copy[count++] = va_arg(arg1, char);
			else
			{
				copy[count++] = format(--i);
				copy[count++] = format(++i);
			}
		}
		else
			copy[count++] = format[i];
		i++;
	}
	write(1, copy, count);
	return (count);
}
